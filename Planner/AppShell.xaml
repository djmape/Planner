<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Planner.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Planner.Views"
    Title="Planner">

    <FlyoutItem Title="Calendar">
        <ShellContent Title="Day"
                ContentTemplate="{DataTemplate views:DayPage}"/>
    </FlyoutItem>

    <FlyoutItem Title="Events">
        <ShellContent Title="Events"
        ContentTemplate="{DataTemplate views:EventsPage}"
                      Route="EventsPage"/>
    </FlyoutItem>

</Shell>
