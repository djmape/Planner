<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Planner.Views.EventPage"
             Title="EventPage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label
            Text="Event Title" />
        <Entry
            Placeholder="Enter event name"
            Text="{Binding EventTitle}"/>
        <Label
            Text="Event Description" />
        <Editor
            Placeholder="Enter description"
            Text="{Binding EventDescription}"/>
        <Label
            Text="Date" />
        <HorizontalStackLayout>
            <DatePicker Date="{Binding EventStartDate}"/>
            <TimePicker Time="{Binding EventStartTime}"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <DatePicker Date="{Binding EventEndDate}"/>
            <TimePicker Time="{Binding EventEndTime}"/>
        </HorizontalStackLayout>
        <Button
            Text="Add Event"
            Command="{Binding OnAddEventClickedCommand}">
        </Button>
    </VerticalStackLayout>
</ContentPage>